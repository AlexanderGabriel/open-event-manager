{% extends 'email/base.html.twig' %}
{% block header %}
    -- {{ 'Bitte bestätigen Sie Ihre Anmeldung'|trans }} --
{% endblock %}

{% block content %}
    <h4 class="text-center">
        {{ room.name }}
    </h4>
    <b>
        {{'Hallo!'|trans}}
    </b>
    <p>
        {% trans with {'{name}': room.name|escape} %}
            Bitte bestätigen Sie Ihre Anmeldung zum Event {name}.
        {% endtrans %}
    </p>
    <p>
        <br>
        <br>
        <a href="{{ absolute_url(path('public_subscribe_doupleOptIn',{'uid':subsription.uid})) }}">
           {% trans%} Klicken Sie hier um die Anmeldung abzuschließen{% endtrans %}
        </a>
    <br>
        <br>
    </p>
    <b>
        {{ 'Name'|trans }}: {{ room.name }}
    </b>
    <p>{{ 'Organisator'|trans }}: {{ room.moderator.firstName }} {{ room.moderator.lastName }}<br>
        {{ 'Datum'|trans }}: {{ room.start|date('d.m.Y') }}<br>
        {{ 'Startzeit'|trans }}: {{ room.start|date('H:i') }}<br>
        {{ 'Geplante Dauer'|trans }}: {{ room.duration }} {{ 'Minuten'|trans }}</p>

{% endblock %}
