{% extends 'email/base.html.twig' %}
{% block header %}
    -- {{ 'Event bearbeitet'|trans }} --
{% endblock %}

{% block content %}
    <h4 class="text-center">
        {{ room.name }}
    </h4>
    <b>
        {{'Hallo!'|trans}}
    </b>
    <p>
      {% trans with {'{name}': room.name} %}  Das Event {name} wurde gerade geändert. {% endtrans %}
    </p>


    {% include 'email/__roomInfo.html.twig' %}
    <br>
    <br>
    <a href="{{ absolute_url(path('storno_index',{'uidUser':user.uid,'uidRoom':room.uid})) }}">
        {{ 'Hier können Sie sich von dem Event abmelden'|trans }}
    </a>
{% endblock %}
